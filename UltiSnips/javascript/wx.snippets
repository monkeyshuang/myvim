snippet wx.request "send https request" b
wx.request({
	url: "${1:/}",
	method: "${2:POST}",
	success: function(res) {
		let ${3:data} = res.data
	},
	fail: function(e) {
		${4}
	}
})
endsnippet

snippet wx.uploadFile "upload file" b
wx.uploadFile({
	url: "${1:/}",
	filePath: ${2:tempFilePath},
	name: "${3:name}", // name of file in formData
	formdata: {},
	success: function(res) {
		let ${4:str} = res.data
	}
})
endsnippet

snippet wx.downloadFile "download file" b
wx.downloadFile({
	url: "${1:/}",
	type: "${2:image/audio/video}",
	success: function(res) {
		let ${3:path} = res.tempFilePath
	}
})
endsnippet

snippet wx.connectSocket "connect socket" b
wx.connectSocket({
