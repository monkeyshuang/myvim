})
endsnippet

snippet wx.sendSocketMessage "send socket message" b
wx.sendSocketMessage({
	data: "${1:string}"
})
endsnippet

snippet wx.onSocketMessage "on socket message" b
wx.onSocketMessage(function(res) {
	var ${1:s} = res.data
})
endsnippet

snippet wx.onSocketError "on socket error" b
wx.onSocketError(function(res){
	${1}
